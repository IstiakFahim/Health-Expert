<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="70dp"
            android:id="@+id/cardviewofblood">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageviewofblood"
                android:src="@drawable/logo">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Health Expert"
            android:textSize="20sp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/cardviewofblood"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textName">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/textName"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cardviewofblood"
            android:text="Blood Group: "
            android:textColor="@color/main"
            android:textSize="16sp"
            android:id="@+id/huhuhu">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/textName"
            android:layout_toRightOf="@+id/huhuhu"
            android:text="A-"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/main"
            android:layout_marginLeft="10dp"
            android:id="@+id/bloodgroup">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Email: "
            android:textColor="@color/main"
            android:layout_toRightOf="@+id/cardviewofblood"
            android:layout_below="@+id/huhuhu"
            android:layout_marginLeft="20dp"
            android:id="@+id/hahaha">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="healthexpert@gmail.com"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_below="@+id/huhuhu"
            android:layout_toRightOf="@+id/hahaha"
            android:id="@+id/bloodemail">

        </TextView>



    </RelativeLayout>

</RelativeLayout>